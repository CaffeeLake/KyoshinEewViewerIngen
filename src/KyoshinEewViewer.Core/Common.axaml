<Styles xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:KyoshinEewViewer.Core">
  <Styles.Resources>
    <FontFamily x:Key="IconFont">avares://KyoshinEewViewer.Core/Assets/Fonts/FontAwesome5Free-Solid.ttf#Font Awesome 5 Free</FontFamily>
    <FontFamily x:Key="MainFont">avares://KyoshinEewViewer.Core/Assets/Fonts/NotoSansJP-*.otf#Noto Sans JP</FontFamily>
  </Styles.Resources>
  <Style Selector="TextBlock.icon">
    <Setter Property="FontFamily" Value="{StaticResource IconFont}" />
    <Setter Property="FontWeight" Value="Black" />
  </Style>
  <Style Selector="Window">
    <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
    <Setter Property="FontWeight" Value="Regular" />
  </Style>
</Styles>
