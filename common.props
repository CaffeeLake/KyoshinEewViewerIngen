    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.7" />
    <PackageReference Include="Avalonia.Skia" Version="0.10.7" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="0.10.7" />
    <PackageReference Include="ReactiveUI.Fody" Version="16.2.1" />
    
    <PackageReference Include="LiteDB" Version="5.0.11" />
    
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="NReco.Logging.File" Version="1.1.2" />
    
    <PackageReference Include="KyoshinMonitorLib" Version="0.4.0.0" />
    <PackageReference Include="KyoshinMonitorLib.SkiaImages" Version="0.4.2.0" />
    <PackageReference Include="KyoshinMonitorLib.Timers" Version="0.4.0.1" />
