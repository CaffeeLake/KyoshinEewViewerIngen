<Project>
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    
    <AssemblyVersion>0.10.31.$(BUILD_NUMBER)</AssemblyVersion>
    <CFBundleShortVersionString>0.10.31.$(BUILD_NUMBER)</CFBundleShortVersionString>
    <AssemblyVersion Condition="'$(BUILD_NUMBER)' == ''">0.0.1.0</AssemblyVersion>
    <Nullable>enable</Nullable>

    <Product>KyoshinEewViewer for ingen</Product>
    <Authors>ingen software</Authors>

    <DebugType>embedded</DebugType>

    <InvariantGlobalization>true</InvariantGlobalization>
    <TrimMode>link</TrimMode>

    <DefineConstants Condition="$(RuntimeIdentifier.StartsWith('linux'))">LINUX</DefineConstants>
  </PropertyGroup>

  <!-- NuGet -->
  <ItemGroup>
    <PackageReference Include="Dotnet.Bundle" Version="*" />

    <PackageReference Include="Avalonia" Version="0.10.10" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.10" />
    <PackageReference Include="Avalonia.Diagnostics" Version="0.10.10" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.10" />
    <PackageReference Include="Avalonia.Skia" Version="0.10.10" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="0.10.10.4" />
    <PackageReference Include="ReactiveUI.Fody" Version="17.1.6" />

    <PackageReference Condition="$(RuntimeIdentifier.StartsWith('linux'))" Include="Mono.Posix.NETStandard" Version="1.0.0" />
    
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
    <PackageReference Include="NReco.Logging.File" Version="1.1.2" />
    
    <PackageReference Include="KyoshinMonitorLib" Version="0.4.2.1" />
    <PackageReference Include="KyoshinMonitorLib.SkiaImages" Version="0.4.2.1" />
    <PackageReference Include="KyoshinMonitorLib.Timers" Version="0.4.2.1" />
    <PackageReference Include="DmdataSharp" Version="0.4.8.1" />
  </ItemGroup>
</Project>
